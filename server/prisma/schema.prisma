// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  githubId  Int    @unique
  name      String
  login     String
  avatarUrl String

  //linha criada automaticamente
  memories Memory[]
}

// um usu치rio pode ter v치rias mem칩rias
// rel 1 para muitos
model Memory {
  id        String   @id @default(uuid())
  coverUrl  String
  content   String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())

  //por conta do formatSave, salvando apenas com user User
  // o relacionamento ser치 criado automaticamente
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
